{
	"name": "sveltekit-typescript-postcss-tailwind2",
	"version": "0.0.3",
	"scripts": {
		"dev": "svelte-kit dev",
		"build": "svelte-kit build",
		"start": "svelte-kit start",
		"format": "prettier --write ./src/**/*.{svelte,ts} ./*.{ts,cjs}",
		"lint": "eslint ./src/**/*.{ts,svelte} --ignore-path .gitignore .",
		"lint:fix": "eslint --fix ./src/**/*.{ts,svelte} --ignore-path .gitignore .",
		"prelint": "npm run format",
		"prepare": "husky install"
	},
    "lint-staged": {
        "./src/**/*.{ts,svelte}": [
            "npm run lint:fix"
        ],
        "./.{ts,cjs}": [
            "npm run lint:fix"
        ]
    },
	"devDependencies": {
		"@sveltejs/adapter-static": "next",
		"@sveltejs/kit": "next",
		"@tailwindcss/jit": "^0.1.18",
		"@typescript-eslint/eslint-plugin": "^4.19.0",
		"@typescript-eslint/parser": "^4.19.0",
		"autoprefixer": "^10.2.5",
		"eslint": "^7.22.0",
		"eslint-config-prettier": "^8.1.0",
		"eslint-plugin-svelte3": "^3.1.0",
		"husky": "^6.0.0",
		"lint-staged": "^10.5.4",
		"postcss-load-config": "^3.0.1",
		"postcss-nested": "^5.0.5",
		"prettier": "~2.2.1",
		"prettier-plugin-svelte": "^2.2.0",
		"svelte": "^3.29.0",
		"svelte-preprocess": "^4.0.0",
		"tailwindcss": "^2.0.4",
		"tslib": "^2.0.0",
		"typescript": "^4.0.0",
		"vite": "^2.1.0"
	},
	"type": "module"
}
